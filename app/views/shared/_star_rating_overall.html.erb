<% ratings = [] %>
<% rating_sum = 0 %>
<% maker.reviews.each do |review| %>
  <% ratings << review.overall_rating %>
  <% rating_sum += review.overall_rating %>
<% end %>
<% overall_rating = rating_sum.fdiv(ratings.count) %>
<% full_stars = overall_rating.floor %>
<% full_stars.times do %>
  <i class="fa-solid fa-star star-icon align-middle"></i>
<% end %>
<% post_digit = overall_rating - overall_rating.floor %>
<% half_stars = post_digit.round(0) %>
<% half_stars.times do %>
  <i class="fa-solid fa-star-half-stroke star-icon align-middle"></i>
<% end %>
<% empty_stars = 5 - full_stars - half_stars %>
<% empty_stars.times do %>
  <i class="fa-regular fa-star star-icon align-middle"></i>
<% end %>
