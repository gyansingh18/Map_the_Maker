<% ratings = [] %>
<% rating_sum = 0 %>
<% maker.reviews.each do |review| %>
  <% ratings << review.freshness_rating %>
  <% rating_sum += review.freshness_rating %>
<% end %>
<% freshness_rating = rating_sum.fdiv(ratings.count) %>
<% full_stars = freshness_rating.floor %>
<% full_stars.times do %>
  <i class="fa-solid fa-star star-icon-white"></i>
<% end %>
<% post_digit = freshness_rating - freshness_rating.floor %>
<% half_stars = post_digit.round(0) %>
<% half_stars.times do %>
  <i class="fa-solid fa-star-half-stroke star-icon-white"></i>
<% end %>
<% empty_stars = 5 - full_stars - half_stars %>
<% empty_stars.times do %>
  <i class="fa-regular fa-star star-icon-white"></i>
<% end %>
