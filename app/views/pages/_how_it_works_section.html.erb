<section class="how-it-works-section">
  <div class="container">
    <h2>How it works</h2>
    <div class="steps-container">
      <div class="step-item">
        <div class="step-icon">
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <h3>Discover</h3>
        <p>Browse the map to find local farmers, producer and artisans.</p>
      </div>
      <div class="step-item">
        <div class="step-icon">
          <i class="fas fa-store-alt"></i>
        </div>
        <h3>Learn</h3>
        <p>Learn about each producer through recommendations shared by the community.</p>
      </div>
      <div class="step-item">
        <div class="step-icon">
          <i class="fa-solid fa-puzzle-piece"></i>
        </div>
        <h3>Contribute</h3>
        <p>Add your favorite producers and help grow the map.</p>
      </div>
    </div>
    <div class="video-mockup">
      <%= video_tag "mockup_video.mp4",
          autoplay: true,
          loop: true,
          muted: true,
          playsinline: true,
          poster: image_path("mockup_img.png")
        %>
    </div>
  </div>
</section>
